---
// Click button, get confetti!
// Styled by Tailwind :)
---

<div
  id="chip-img"
  class="p-5 bg-teal-500 rounded-full shadow-2xl shadow-teal-700 mb-5 transition ease-in-out delay-150"
>
  <div class="p-4 bg-teal-300 rounded-full">
    <img src="/images/me.jpg" width="350" alt="" class="rounded-full" />
  </div>
</div>
<script>
  const chip = document.body.querySelector("#chip-img");
  if (chip) {
    chip.addEventListener("click", (e) => {
      console.log(chip);
      chip.classList.add("rotate-[360deg]")
    });
  }
</script>
